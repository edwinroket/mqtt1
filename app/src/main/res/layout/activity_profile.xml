<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202235"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <!-- Header / Foto -->
        <View
            android:id="@+id/headerProfile"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_curve_header"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfilePic"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="70dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#2A2D3E"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgProfileEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:background="#2A2D3E"/>
            
            <!-- Botón flotante cámara -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:background="#80000000">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_gravity="center"
                    app:tint="#00F2FF"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        
        <!-- Borde Neón para Foto -->
        <View
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:background="@drawable/bg_circle_neon" 
            app:layout_constraintTop_toTopOf="@id/cardProfilePic"
            app:layout_constraintBottom_toBottomOf="@id/cardProfilePic"
            app:layout_constraintStart_toStartOf="@id/cardProfilePic"
            app:layout_constraintEnd_toEndOf="@id/cardProfilePic"/>

        <TextView
            android:id="@+id/lblEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cardProfilePic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- FORMULARIO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/lblEditProfile">

            <!-- Email (Solo Lectura) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo Electrónico"
                android:textColor="#00F2FF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>
                
            <TextView
                android:id="@+id/txtProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="usuario@ejemplo.com"
                android:textColor="#B0B3C6"
                android:textSize="16sp"
                android:background="@drawable/bg_input_dark"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Completo"
                android:textColor="#00F2FF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>
            
            <EditText
                android:id="@+id/edtProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_dark"
                android:hint="Tu nombre"
                android:textColor="#FFFFFF"
                android:textColorHint="#505565"
                android:padding="16dp"
                android:drawableEnd="@android:drawable/ic_menu_myplaces"
                android:drawableTint="#505565"
                android:inputType="textPersonName"
                android:layout_marginBottom="24dp"/>

            <!-- Telefono -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:textColor="#00F2FF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtProfilePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_dark"
                android:hint="+56 9 1234 5678"
                android:textColor="#FFFFFF"
                android:textColorHint="#505565"
                android:padding="16dp"
                android:drawableEnd="@android:drawable/ic_menu_call"
                android:drawableTint="#505565"
                android:inputType="phone"
                android:layout_marginBottom="24dp"/>

            <!-- Dirección (Visible para User/Distribuidor) -->
            <LinearLayout
                android:id="@+id/containerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección (GPS)"
                    android:textColor="#00F2FF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"/>
                    
                <EditText
                    android:id="@+id/edtProfileAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_dark"
                    android:hint="Toca para seleccionar ubicación"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#505565"
                    android:padding="16dp"
                    android:drawableEnd="@android:drawable/ic_dialog_map" 
                    android:drawableTint="#00F2FF"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="24dp"/>
            </LinearLayout>

            <!-- Empresa (Solo Distribuidor) -->
            <LinearLayout
                android:id="@+id/containerCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de Empresa"
                    android:textColor="#00F2FF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"/>
                    
                <EditText
                    android:id="@+id/edtProfileCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_dark"
                    android:hint="Ej: Gas Express"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#505565"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp"/>
            </LinearLayout>
            
            <!-- Botón Cambiar Contraseña (NUEVO) -->
            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Cambiar Contraseña"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="#00F2FF"
                app:strokeColor="#00F2FF"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                android:layout_marginBottom="12dp"/>

            <!-- Botón Guardar -->
            <Button
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Actualizar Perfil"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#202235"
                android:backgroundTint="#00F2FF"
                app:cornerRadius="30dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>