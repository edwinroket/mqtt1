<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración de Balón"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="32dp"/>

        <!-- CONTENEDOR GLASS PARA FORMULARIO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_glass_effect"
            android:padding="24dp">

            <!-- SELECCIÓN DE KILOS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamaño del Balón"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/neon_blue"
                android:layout_marginBottom="16dp"/>

            <RadioGroup
                android:id="@+id/radioGroupKilos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="32dp">

                <RadioButton
                    android:id="@+id/rb5kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5kg"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/neon_green"
                    android:layout_marginEnd="16dp"/>
                <RadioButton
                    android:id="@+id/rb11kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11kg"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/neon_green"
                    android:layout_marginEnd="16dp"/>
                <RadioButton
                    android:id="@+id/rb15kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15kg"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/neon_green"
                    android:layout_marginEnd="16dp"/>
                <RadioButton
                    android:id="@+id/rb45kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45kg"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/neon_green"/>
            </RadioGroup>

            <!-- SELECCIÓN DE EMPRESA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empresa Distribuidora"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/neon_blue"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_marginBottom="32dp"
                android:textColorHint="@color/text_secondary"
                app:boxStrokeColor="@color/neon_blue"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="@color/neon_blue"
                app:startIconTint="@color/text_secondary">

                <AutoCompleteTextView
                    android:id="@+id/spinnerEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Gasco" 
                    android:textColor="@color/text_primary"
                    android:background="@color/glass_surface"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- FECHA INSTALACIÓN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_glass_effect"
                android:padding="16dp"
                android:layout_marginBottom="32dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Instalación (Hoy)"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"/>
                    
                <TextView
                    android:id="@+id/txtFechaHoy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--/--/----"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/neon_purple"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarConfig"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Confirmar Balón Nuevo"
                android:textSize="16sp"
                android:textColor="@color/bg_app_start"
                android:textStyle="bold"
                app:backgroundTint="@color/neon_blue"
                app:cornerRadius="12dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>