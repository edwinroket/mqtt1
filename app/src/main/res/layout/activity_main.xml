<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity">

    <!-- ================= HEADER MODERNO ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgProfile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_profile_rounded"
            android:background="@drawable/bg_glass_effect"
            android:padding="12dp"
            app:tint="@color/neon_blue"
            app:shapeAppearanceOverlay="@style/CircleImageStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtHelloUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola, Usuario"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/imgProfile"
            app:layout_constraintStart_toEndOf="@id/imgProfile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitoreo en tiempo real"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/txtHelloUser"
            app:layout_constraintStart_toStartOf="@id/txtHelloUser"/>
            
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= CONTENEDOR PRINCIPAL (Scrollable) ================= -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <!-- TITULO DE SECCIÓN (Admin/Distribuidor) -->
            <TextView
                android:id="@+id/txtAdminInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PANEL DE CONTROL"
                android:textColor="@color/neon_purple"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:visibility="gone"/>

            <!-- ================= MODO USUARIO (Medidor + Grid) ================= -->
            <LinearLayout
                android:id="@+id/layoutModoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- TARJETA PRINCIPAL MEDIDOR (GLASS STYLE) -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_effect"
                    android:padding="24dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:id="@+id/lblNivel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel de Gas"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                         android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanque Principal"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lblNivel"/>

                    <!-- PROGRESO CIRCULAR -->
                    <!-- Fondo -->
                    <ProgressBar
                        android:id="@+id/progressBg"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:layout_marginTop="24dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/circular_progress_background"
                        app:layout_constraintTop_toBottomOf="@id/lblNivel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Indicador -->
                    <ProgressBar
                        android:id="@+id/progressBarGas"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="45"
                        android:progressDrawable="@drawable/circular_progress_indicator"
                        app:layout_constraintTop_toTopOf="@id/progressBg"
                        app:layout_constraintStart_toStartOf="@id/progressBg"
                        app:layout_constraintEnd_toEndOf="@id/progressBg"/>

                    <!-- TEXTO CENTRAL -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="@id/progressBg"
                        app:layout_constraintBottom_toBottomOf="@id/progressBg"
                        app:layout_constraintStart_toStartOf="@id/progressBg"
                        app:layout_constraintEnd_toEndOf="@id/progressBg">

                        <TextView
                            android:id="@+id/txtPeso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="42sp"
                            android:fontFamily="sans-serif-black"
                            android:textColor="@color/text_primary"/>
                        
                        <TextView
                            android:id="@+id/txtEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sincronizando..."
                            android:textSize="12sp"
                            android:textColor="@color/neon_blue"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- GRID DE OPCIONES (GLASS STYLE) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Tarjeta Izquierda: Visibilidad -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_glass_effect"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_share"
                            app:tint="@color/neon_green"
                            android:background="@drawable/bg_glass_effect" 
                            android:padding="8dp"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compartir Datos"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visible para distribuidor"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchCompartir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Tarjeta Derecha: Alerta -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_glass_effect"
                        android:padding="16dp"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_lock_idle_alarm"
                            app:tint="@color/status_warning"
                            android:background="@drawable/bg_glass_effect"
                            android:padding="8dp"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado Alarma"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"/>
                        
                        <!-- Se muestra si hay alerta -->
                        <LinearLayout
                            android:id="@+id/layoutAlertaVisual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:visibility="gone">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¡CRÍTICO!"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/status_critical"/>
                        </LinearLayout>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Normal"
                            android:textSize="14sp"
                            android:textColor="@color/status_good"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ================= MODO DISTRIBUIDOR (Lista/Grid) ================= -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!-- ================= MODO ADMIN (Dispositivos / Buzzer) ================= -->
            <LinearLayout
                android:id="@+id/layoutModoAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Tarjeta de Control de Buzzer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_glass_effect"
                    android:padding="24dp"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_lock_idle_alarm"
                            app:tint="@color/neon_purple"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prueba de Actuador (Buzzer)"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Al activar, se enviará una señal a Realtime Database para encender el Buzzer físico remotamente."
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_glass_effect"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Estado del Buzzer"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"/>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchBuzzerTest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
                
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ================= BOTTOM BAR (GLASS EFFECT) ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_glass_effect"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <!-- Botón Central (INICIO) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnHome"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardBackgroundColor="@color/neon_blue"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_home_rounded"
                app:tint="@color/white"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- IZQUIERDA 1: USUARIOS -->
        <ImageView
            android:id="@+id/btnUsers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_users_rounded"
            app:tint="@color/text_secondary"
            android:padding="16dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDevices"
            android:clickable="true"
            android:focusable="true"/>

        <!-- IZQUIERDA 2: DISPOSITIVOS -->
        <ImageView
            android:id="@+id/btnDevices"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_devices_rounded"
            app:tint="@color/text_secondary"
            android:padding="16dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnUsers"
            app:layout_constraintEnd_toStartOf="@id/btnHome"
            android:clickable="true"
            android:focusable="true"/>

        <!-- DERECHA 1: MÉTRICAS -->
        <ImageView
            android:id="@+id/btnMetrics"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_monitoring_rounded"
            app:tint="@color/text_secondary"
            android:padding="16dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnHome"
            app:layout_constraintEnd_toStartOf="@id/btnProfileBottom"
            android:clickable="true"
            android:focusable="true"/>

        <!-- DERECHA 2: PERFIL -->
        <ImageView
            android:id="@+id/btnProfileBottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_profile_rounded"
            app:tint="@color/text_secondary"
            android:padding="16dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnMetrics"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:focusable="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>