<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_app">

    <!-- ================= HEADER ================= -->
    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/bg_curve_header"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="24dp"
        android:src="@mipmap/ic_launcher_round"
        android:background="@drawable/bg_circle_gradient"
        android:padding="2dp"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHelloUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola, Usuario"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintBottom_toBottomOf="@id/imgProfile"/>
        
    <!-- Botón Notif / Logout -->
    <ImageButton
        android:id="@+id/btnNotif"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_glass_effect"
        android:src="@android:drawable/ic_lock_power_off"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintBottom_toBottomOf="@id/imgProfile"/>

    <!-- ================= CONTENIDO SCROLLABLE ================= -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- ================= VISTA USUARIO (CLIENTE) ================= -->
            <LinearLayout
                android:id="@+id/layoutModoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"> <!-- Default visible -->

                <!-- Tarjeta Gas Principal -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#202235">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="24dp">
                        <TextView
                            android:id="@+id/lblGasTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tu Balón de Gas"
                            android:textColor="#AAAAAA"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/txtPeso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- kg"
                            android:textColor="@color/neon_blue"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/lblGasTitle"/>
                        
                        <TextView
                            android:id="@+id/txtEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desconectado"
                            android:textColor="#FF5252"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txtPeso"/>
                            
                        <ProgressBar
                            android:id="@+id/progressBarGas"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:progressDrawable="@drawable/circular_progress_indicator"
                            android:progress="0"
                            android:max="100"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:id="@+id/txtPorcentajeCentro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--%"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/progressBarGas"
                            app:layout_constraintEnd_toEndOf="@id/progressBarGas"
                            app:layout_constraintTop_toTopOf="@id/progressBarGas"
                            app:layout_constraintBottom_toBottomOf="@id/progressBarGas"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                
                <!-- Alerta Visual (Layout) -->
                <LinearLayout
                    android:id="@+id/layoutAlertaVisual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_status_chip_red"
                    android:padding="12dp">
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¡NIVEL CRÍTICO! RECARGAR AHORA"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
                
                <!-- Gráfico Lineal Usuario -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardBackgroundColor="#202235">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tu Consumo"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chartUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtDiasRestantes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estimación: -- Días"
                    android:textColor="#888"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>
                    
                <!-- SWITCHES -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Compartir Datos con Distribuidor"
                            android:textColor="@color/white"/>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchCompartir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Probar Alarma Sonora"
                            android:textColor="#AAA"/>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchBuzzerTest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                
            </LinearLayout>


            <!-- ================= VISTA ADMIN (KPIs + GRAFICO) ================= -->
            <LinearLayout
                android:id="@+id/layoutModoAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DASHBOARD GENERAL"
                    android:textColor="@color/neon_purple"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"/>

                <!-- KPIs ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="16dp"
                    android:weightSum="2">
                    
                    <!-- Total Clientes -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#2A2D3E">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txtTotalClientes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clientes Activos"
                                android:textSize="12sp"
                                android:textColor="#AAA"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Alertas Activas -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#3E2723"> <!-- Fondo rojizo oscuro -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txtTotalAlertas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#FF5252"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alertas Críticas"
                                android:textSize="12sp"
                                android:textColor="#FFCDD2"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- GRÁFICO PASTEL (Estado Global) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardBackgroundColor="#202235">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado del Parque de Tanques"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chartAdminEstado"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                
                <!-- Recycler para admin (lista completa) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerClientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:nestedScrollingEnabled="false"/>

            </LinearLayout>


            <!-- ================= VISTA DISTRIBUIDOR (LOGÍSTICA) ================= -->
            <LinearLayout
                android:id="@+id/layoutModoDistribuidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOGÍSTICA Y RUTA"
                    android:textColor="@color/accent_blue"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prioridad de Entrega (Críticos)"
                    android:textColor="#AAA"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Lista de Clientes -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerDistribuidor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>
            
            <!-- ================= VISTA MAPA GLOBAL (COMPARTIDA) ================= -->
            <LinearLayout
                android:id="@+id/layoutMapaGlobal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/lblMapTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAPA DE DISPOSITIVOS"
                    android:textColor="@color/neon_green"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"/>

                <!-- MAPA (Fragmento de Google Maps) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#202235">
                    
                    <fragment
                        android:id="@+id/mapFragment"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                        
                </androidx.cardview.widget.CardView>
                
                <TextView
                    android:id="@+id/lblMapListTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lista de Ubicaciones"
                    android:textColor="#AAA"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Lista auxiliar debajo del mapa (para Admin/User) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerMapList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:nestedScrollingEnabled="false"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ================= BOTTOM NAV ================= -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_bottom_nav"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp">
            
            <ImageView
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_modern"
                app:tint="@color/accent_blue"/>
                
            <ImageView
                android:id="@+id/btnUsers"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="@color/white"/>
                
            <ImageView
                android:id="@+id/btnMetrics"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="@color/white"/>
                
            <ImageView
                android:id="@+id/btnDevices"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_dialog_map"
                app:tint="@color/white"/> <!-- Icono cambiado a Mapa -->
                
            <ImageView
                android:id="@+id/btnProfileBottom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="@color/white"/>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>